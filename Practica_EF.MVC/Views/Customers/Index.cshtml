@model List<Practica_EF.MVC.Models.CustomersView>

@{
    ViewBag.Title = "Customers Page";
}

<h1>Hola soy el Index de Customers</h1>

<table class="table">
    <thead>
        <tr>

            <th scope="col">ID</th>
            <th scope="col">Company Name</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var customers in Model)
        {
        <tr>
            <th scope="row">@customers.Id</th>
            <td>@customers.CompanyName</td>
            <td>@Html.ActionLink("Borrar", "Delete", new { id = customers.Id })</td>
            <td>@Html.ActionLink("Modificar", "Update", new { id = customers.Id,CompanyName=customers.CompanyName})</td>
        </tr>
        }

<tbody>

     
</table>

<div>

    @Html.ActionLink("Insertar Nuevo Cliente","Insert")

</div>